---
import HeaderLinks from './HeaderLinks.astro';
import PrimaryLogo from './PrimaryLogo.astro';
import SocialLinks from './SocialLinks.astro';
import { Icon } from 'astro-icon/components';
import { SITE_TITLE, SITE_LOGO, HEADER_CTA_LINK, HEADER_CTA_TEXT } from '../consts';
---

<header class="bg-gray-900">
	<nav class="flex container items-center justify-start mx-auto p-4 md:p-12 sticky top-0 z-50">
		<!-- Desktop navigation -->
		<PrimaryLogo title={SITE_TITLE} logo={SITE_LOGO} />
		<div class="hidden w-full md:block md:w-auto md:mr-auto md:ml-2">
			<HeaderLinks />
		</div>
		<!-- Desktop social links -->
		<div class="hidden w-full md:block md:w-auto">
			<SocialLinks />
		</div>
		
		<!-- Desktop header CTA -->
		{ HEADER_CTA_TEXT && HEADER_CTA_LINK && (
			<div class="hidden md:block md:mr-4">
				<a class="button" href={HEADER_CTA_LINK}>{HEADER_CTA_TEXT}</a>
			</div>
		)}
		
		<!-- Mobile menu toggle -->
		<button data-collapse-toggle="mobile-nav" aria-controls="mobile-nav" aria-expanded="false" class="mobile-nav-button ml-auto">
			<span class="sr-only">Open site menu</span>
			<Icon name="mdi:menu" />
		</button>
	</nav>

	<div class="hidden absolute left-0 top-0 bottom-0 right-0 bg-blue-950/75 backdrop-blur-lg transition-all duration-200" id="mobile-nav">
		<div class="flex flex-col items-center justify-center space-y-12 h-full">
			<PrimaryLogo title={SITE_TITLE} logo={SITE_LOGO} />
			<div class="flex flex-col items-center space-y-4">
				<HeaderLinks />
			</div>
			<SocialLinks />

			{ HEADER_CTA_TEXT && HEADER_CTA_LINK && (
				<a class="button" href={HEADER_CTA_LINK}>{HEADER_CTA_TEXT}</a>
			)}
		</div>
	</div>
</header>




